<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_daftar"
        android:textAlignment="center"
        android:textSize="30dp"
        android:id="@+id/tv_TitleDaftar"/>

    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort Alphabetically:"
        android:layout_below="@+id/tv_TitleDaftar"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp">
    </TextView>
    <Button
        android:id="@+id/btn_sortOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ascending"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:layout_below="@id/tv_sort"
        android:layout_alignParentRight="true">
    </Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/btn_sortOrder">
        
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_movie">
        </ListView>
        
    </LinearLayout>
    
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_add"
        android:id="@+id/btn_plus"
        android:backgroundTint="#A9A9A9"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp" />
</RelativeLayout>